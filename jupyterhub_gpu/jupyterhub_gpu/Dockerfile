FROM nvidia/cuda:12.2.2-cudnn8-devel-ubuntu22.04
RUN apt-get update && apt-get install -y curl && ln -snf /usr/share/zoneinfo/$(curl https://ipapi.co/timezone) /etc/localtime && apt-get install python3-pip -y && pip install jupyterhub && pip install notebook && pip install jupyterlab && pip install tensorflow && pip3 install torch torchvision torchaudio --index-url https://download.pytorch.org/whl/cu121 && pip install wget && pip install pandas && pip install transformers && pip install numpy && pip install scikit-learn && pip install matplotlib && pip install nltk && pip install spacy && pip install seaborn && apt-get install unzip && apt-get install npm nodejs -y && npm install -g configurable-http-proxy && jupyterhub --generate-config && echo "c.Authenticator.allow_all = True" >> jupyterhub_config.py && apt-get install -y sudo && apt-get install -y vim && apt-get install -y htop && apt-get install -y net-tools && pip install ipywidgets && pip install datasets && pip install tf-keras && pip install wandb && pip install sentencepiece && pip install accelerate

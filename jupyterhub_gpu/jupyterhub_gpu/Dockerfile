FROM nvidia/cuda:11.4.1-cudnn8-devel-ubuntu20.04
RUN apt-get update && apt-get install -y curl && ln -snf /usr/share/zoneinfo/$(curl https://ipapi.co/timezone) /etc/localtime && apt-get install python3-pip -y && pip install jupyterhub && pip install notebook && pip install jupyterlab && pip install tensorflow-gpu && pip install torch==1.9.0+cu111 torchvision==0.10.0+cu111 torchaudio==0.9.0 -f https://download.pytorch.org/whl/torch_stable.html && pip install wget && pip install pandas && pip install transformers && pip install numpy && pip install sklearn && pip install matplotlib && pip install nltk && pip install spacy && pip install seaborn && apt-get install unzip && apt-get install npm nodejs -y && npm install -g configurable-http-proxy && jupyterhub --generate-config && echo "c.Spawner.cmd = ['jupyter-labhub']" >> jupyterhub_config.py && apt-get install sudo && apt-get install vim && apt-get install htop && apt-get install net-tools && pip install ipywidgets
